@{
    ViewBag.Title = "体质辨识管理";
    ViewBag.SmallTitle = "体质辨识列表";
}
<!-- Pages styles -->
@section HeadCss{
    <link rel="stylesheet" href="/assets/css/jquery-ui-1.10.3.full.min.css" />
    <link href="/assets/css/page.css" rel="stylesheet" type="text/css" />
}
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/">首页</a>
        </li>

        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
        <li class="active">@ViewBag.SmallTitle</li>
    </ul><!-- .breadcrumb -->
    <div class="nav-search" id="nav-search">

        <form class="form-search">
            <span class="input-icon">
                <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                <i class="icon-search nav-search-icon"></i>
            </span>
        </form>
    </div>
    <!-- #nav-search -->
</div>
<div class="page-content">
    <div class="page-header">


        <h1>
            " @ViewBag.CustomerName " @ViewBag.Title
            <small>
                <i class="icon-double-angle-right"></i>
                @ViewBag.SmallTitle (共 @ViewBag.RecordCount 条记录)
            </small>
            <small class="pull-right"><a href="@Url.Action("Create", "Tizhi", new { id = ViewBag.CustomerId })" class="btn btn-success"><i class="icon-plus"></i>新增体质测试</a></small>

        </h1>


    </div>

    <!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>测试时间</th>
                                    <th>档案号</th>
                                   
                                    <th>测试结果</th>


                                    <th>操作</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>


                                       
                                        <td>@item.TizhiTime</td>
                                        <td>@item.TizhiNumber</td>
                                        
                                        <td>@item.TizhiResult</td>


                                        <td>
                                            <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">


                                              
                                                    <a href="@Url.Action("Details", "Tizhi", new { id = item.TizhiId })" class="btn btn-xs btn-warning">
                                                        <i class="icon-edit bigger-120"></i>查看详细报告
                                                    </a>
                                              



                                            </div>

                                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                <div class="inline position-relative">
                                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                                                        <i class="icon-cog icon-only bigger-110"></i>
                                                    </button>

                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                                        <li>
                                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                                <span class="blue">
                                                                    <i class="icon-zoom-in bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                                <span class="green">
                                                                    <i class="icon-edit bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                                <span class="red">
                                                                    <i class="icon-trash bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->
                    <div class="hr hr-18 dotted hr-double"></div>



                    <div class="center">

                        <!-- Pagging -->
                        <div class="SkyPager"></div>
                        <!-- EndPagging -->

                    </div>

                </div><!-- /span -->
            </div>

            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.page-content -->
<div id="dialog-confirm" class="hide">


    <div class="space-6"></div>

    <p class="bigger-110 bolder center grey">
        <i class="icon-hand-right blue bigger-120"></i>
        你确定要删除本条信息吗？
    </p>
</div>
@section BottomScripts{
    <script src="/assets/js/jquery-ui-1.10.3.full.min.js"></script>
    <script src="/assets/js/jquery.ui.touch-punch.min.js"></script>

    <script src="/assets/js/JSsite.js" type="text/javascript"></script>
    <script src="/assets/js/jquery.pager.js" type="text/javascript"></script>
    <script type="text/javascript">

        var pageNo = @ViewBag.PageNo;
        var pageCount = @ViewBag.PageCount;
        var RecordCount=@ViewBag.RecordCount;

        $(function() {

            if (pageCount == 0) {
                 $(".SkyPager").hide();

            }
            $(".SkyPager").pager({ pagenumber: pageNo, pagecount: pageCount, buttonClickCallback: PageClick });
        });

        PageClick = function(no) {
            window.location = "?p=" + no;
        }

        $.widget("ui.dialog", $.extend({}, $.ui.dialog.prototype, {
            _title: function(title) {
                var $title = this.options.title || '&nbsp;'
                if( ("title_html" in this.options) && this.options.title_html == true )
                    title.html($title);
                else title.text($title);
            }
        }));


        $(".btndel").on('click',function(e) {
            e.preventDefault();
            var url=$(this).attr("href");

            $( "#dialog-confirm" ).removeClass('hide').dialog({
                resizable: false,
                modal: true,
                title: "<div class='widget-header'><h4 class='smaller'><i class='icon-warning-sign red'></i> 警告</h4></div>",
                title_html: true,
                buttons: [
                    {
                        html: "<i class='icon-trash bigger-110'></i>&nbsp; 删除本条信息",
                        "class" : "btn btn-danger btn-xs",
                        click: function() {

                            window.location=url;
                            $( this ).dialog( "close" );
                        }
                    }
                    ,
                    {
                        html: "<i class='icon-remove bigger-110'></i>&nbsp; 取消",
                        "class" : "btn btn-xs",
                        click: function() {
                            $( this ).dialog( "close" );
                        }
                    }
                ]
            });
        });

    </script>

}

