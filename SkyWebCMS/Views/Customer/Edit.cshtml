                });
            }
            );

        function updateCusField(id, oldval) {
            var DtoName = "Customer";
            var table = "CMSCustomer";
            var strWhere = "CustomerId=" + $("#CustomerId").val();
            var columnname = $("#" + id + "").attr('name');
            var newval = $("#" + id + "").val();
            if (oldval != "") {
                if (newval == "") {
                    alert("原值不为空时，新值不能为空");
                }
                if (newval == oldval) {
                    alert("数据未更新，和原来一样");
                }
                if (newval != oldval && newval != "") {

                    $.ajax({
                        type: 'POST',
                        url: "/Ajax/updateCusField",
                        data: {
                            DtoName: DtoName,
                            table: table,
                            strWhere: strWhere,
                            columnname: columnname,
                            columnvalue: newval,
                        },
                        dataType: "json",
                        success: function (data) {
                            if (data.MessageStatus == 'true') {
                                alert("更新成功");
                            }
                            else {
                                $("#" + id + "").val(oldval);
                                //   alert("数据格式不太对");
                                alert(data.MessageInfo);

                            }

                            $("." + id + "").remove();
                        },
                    });

                }

            }
            else {
                if (newval == "") {
                    alert("原值就为空，新值也为空，那就空");
                }
                if (newval != oldval) {

                    $.ajax({
                        type: 'POST',
                        url: "/Ajax/updateCusField",
                        data: {
                            DtoName: DtoName,
                            table: table,
                            strWhere: strWhere,
                            columnname: columnname,
                            columnvalue: newval,
                        },
                        dataType: "json",
                        success: function (data) {
                            if (data.MessageStatus == 'true') {
                                alert("更新成功");
                            }
                            else {
                                $("#" + id + "").val(oldval);

                                alert(data.MessageInfo);
                            }

                            $("." + id + "").remove();
                        },
                    });
                }

            }


            //alert(id);
            //alert($("#"+id+"").val());
        }
        function updateCusFieldCancel(id, oldval) {
            // alert(id + "=" + oldval);

            $("#" + id + "").val(oldval);
            $("." + id + "").remove();


        }
    </script>
}


