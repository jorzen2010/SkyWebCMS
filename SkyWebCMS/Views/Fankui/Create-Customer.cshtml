    ViewBag.Title = "黑龙江省中医医院";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="关键词" />
    <meta name="description" content="描述" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

