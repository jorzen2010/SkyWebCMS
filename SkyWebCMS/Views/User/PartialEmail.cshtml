@model SkyWebCMS.Models.UserEmailViewModel
@{
    Layout = null;
}
<div id="email" class="tab-pane">
    <div class="profile-feed row-fluid">
        <div class="row">
            <div class="col-xs-12">

                @using (Html.BeginForm("EditEmail", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                     @Html.HiddenFor(model => model.UserId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "col-sm-3 control-label no-padding-right" })

                        <div class="col-sm-9">

                            @Html.TextBoxFor(model => model.UserName, new { @class = "col-xs-10 col-sm-5", @readonly = true })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserEmail, new { @class = "col-sm-3 control-label no-padding-right" })

                        <div class="col-sm-9">

                            @Html.TextBoxFor(model => model.UserEmail, new { @class = "col-xs-10 col-sm-5" })
                            @Html.ValidationMessageFor(model => model.UserEmail)
                           
                        </div>
                    </div>
                    
                    


                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>
                                提交
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="icon-undo bigger-110"></i>
                                重置
                            </button>
                        </div>
                    </div>
                }

                <!-- /.table-responsive -->

            </div>

            <!-- /span -->
        </div>
    </div><!-- /row -->
</div>