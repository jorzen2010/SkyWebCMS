@model SkyWebCMS.Models.UserSignupViewModel
@{
    Layout = null;
}
<div id="signup-box" class="signup-box widget-box no-border">
    <div class="widget-body">
        <div class="widget-main">
            <h4 class="header green lighter bigger">
                <i class="icon-group blue"></i>
                新注册一个账户
            </h4>

            <div class="space-6"></div>
            <p>请输入你的基本信息: </p>

           @using (Html.BeginForm("UserSignup", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                  {
                <fieldset>
                    @Html.HiddenFor(model => model.UserRoles, new { @class = "form-control" })
                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "用户名" })
                            <i class="icon-envelope"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.UserName)
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "密码" })
                            <i class="icon-user"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.UserPassword)
                    </label>

                    <label class="block clearfix">
                        <span class="block input-icon input-icon-right">
                            @Html.TextBoxFor(model => model.UserConfirmPassword, new { @class = "form-control", @placeholder = "确认密码" })
                            <i class="icon-lock"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.UserConfirmPassword)
                    </label>

                   

                 

                    <div class="space-24"></div>

                    <div class="clearfix">
                        <button type="reset" class="width-30 pull-left btn btn-sm">
                            <i class="icon-refresh"></i>
                            重置
                        </button>

                        <button type="submit" class="width-65 pull-right btn btn-sm btn-success">
                            注册
                            <i class="icon-arrow-right icon-on-right"></i>
                        </button>
                    </div>
                </fieldset>
           }
        </div>

        <div class="toolbar center">
            <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link">
                <i class="icon-arrow-left"></i>
                返回登录
            </a>
        </div>
    </div><!-- /widget-body -->
</div>
